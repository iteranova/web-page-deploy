---

<section id="whychooseus" class="min-h-screen flex items-center justify-center px-5 py-20 md:py-0 bg-gray-50">
  <div class="max-w-7xl mx-auto">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-8 md:mb-12 text-gray-900">{title}</h2>
    <div class="max-w-4xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6">
        {reasons.map((reason, index) => (
          <div class="flex items-center gap-4 bg-white p-5 md:p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300 group">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-primary-light/30 rounded-full flex items-center justify-center group-hover:bg-primary-light/50 transition-colors duration-300">
                <span class="text-xl md:text-2xl">{reason.icon || defaultIcons[index % defaultIcons.length]}</span>
              </div>
            </div>
            <div class="flex-1">
              <h3 class="text-base md:text-lg font-semibold text-gray-900">{reason.title}</h3>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
