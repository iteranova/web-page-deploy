---
interface Props {
  title: string;
  subtitle: string;
  ctaText: string;
}

/**for background: <div class="absolute inset-0 opacity-10" style="background-image: url('/logo-pattern-white.svg'); background-size: 200px; background-repeat: repeat;"></div> */

const { title, subtitle, ctaText } = Astro.props;
---

<section id="home" class="h-screen flex items-center justify-center px-5 bg-primary-multi text-white relative overflow-hidden">
  <div class="max-w-7xl mx-auto relative z-10">
    <div class="text-center">
      <h2 class="text-3xl md:text-5xl font-bold mb-4 md:mb-6">{title}</h2>
      <p class="text-base md:text-xl mb-6 md:mb-8 opacity-90">{subtitle}</p>
      <a
        href="#contact"
        class="inline-block px-6 md:px-8 py-3 md:py-3.5 bg-white text-primary rounded-md font-semibold transition-all duration-300 hover:-translate-y-0.5 hover:shadow-lg text-sm md:text-base"
      >
        {ctaText}
      </a>
    </div>
  </div>
</section>
